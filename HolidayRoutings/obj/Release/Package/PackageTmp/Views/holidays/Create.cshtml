@model HolidayRoutings.Models.vl_HRC_HBC_ASSIGNED_HOLIDAYS

@{
    ViewBag.Title = "Novo Ano";
}

<h2>Novo Ano</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="p-3 mb-2 bg-dark text-white">
        <h4>[@(ViewBag.name)]</h4>
    </div>
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="display: none;">
        @Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.year_related, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.year_related, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.year_related, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.total_days, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.total_days, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.total_days, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.bonus_days, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.bonus_days, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.bonus_days, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="weekends_allowed" class="control-label col-md-2">Fins de Semana</label>
        <div class="col-md-10">
            @Html.DropDownList("weekends_allowed", new SelectList(ViewBag.mandatory, "Value", "Text"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="half_fridays" class="control-label col-md-2">Meias sextas-feiras</label>
        <div class="col-md-10">
            @Html.DropDownList("half_fridays", new SelectList(ViewBag.mandatory, "Value", "Text"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="first_year" class="control-label col-md-2">Primeiro Ano</label>
        <div class="col-md-10">
            @Html.DropDownList("first_year", new SelectList(ViewBag.mandatory, "Value", "Text"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Gravar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Details", "Users", new { id = ViewBag.user_id }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
